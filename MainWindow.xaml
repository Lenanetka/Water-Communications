<Window x:Class="WaterCommunications.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterCommunications"
        xmlns:AttachedBehaviors="clr-namespace:WpfEx.AttachedBehaviors;assembly=WpfEx"
        xmlns:p="clr-namespace:WaterCommunications.Properties"       
        mc:Ignorable="d"
        Title="Water communications" Height="319.867" Width="465" MinHeight="300" MinWidth="465"
        Icon="Resources/wcicon.ico">
    <Grid>
        <Menu Height="23" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="Menu_Open"></MenuItem>
                <MenuItem x:Name="mCalculate" Header="Calculate" Click="Menu_Calculate" IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="Enter file path"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="Menu_Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Settings">
                <MenuItem x:Name="mLanguage" Header="Language">
                    <MenuItem x:Name="mLanguageEnglish" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=mLanguageEnglish, Mode=TwoWay}" Header="English" IsCheckable="true" Click="Menu_Language_English"></MenuItem>
                    <MenuItem x:Name="mLanguageRussian" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=mLanguageRussian, Mode=TwoWay}" Header="Russian" IsCheckable="true" Click="Menu_Language_Russian" IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="Don't work yet"></MenuItem>
                </MenuItem>
                <MenuItem x:Name="mSystemOfUnits" Header="System of units">
                    <MenuItem x:Name="mSystemOfUnitsSI" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=mSystemOfUnitsSI, Mode=TwoWay}" Header="SI" IsCheckable="true" Click="Menu_Units_SI"></MenuItem>
                    <MenuItem x:Name="mSystemOfUnitsGOST" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=mSystemOfUnitsGOST, Mode=TwoWay}" Header="GOST" IsCheckable="true" Click="Menu_Units_GOST"></MenuItem>
                </MenuItem>
                <MenuItem Header="Coefficients" Click="Menu_Coefficients" IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="Don't work yet"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="Menu_About"></MenuItem>
                <MenuItem Header="How to use" Click="Menu_How_to_use"></MenuItem>
            </MenuItem>
        </Menu>
        
        <Label x:Name="labelSave" Content="Save in" HorizontalAlignment="Left" Margin="12,69,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelLoad" Content="Load from" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLoadPath" Height="23" Margin="87,44,78,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" ToolTip="Double click to open" MouseDoubleClick="tbLoadPath_MouseDoubleClick"/>
        <TextBox x:Name="tbSavePath" Height="23" Margin="87,69,78,0" TextWrapping="Wrap" VerticalAlignment="Top" IsReadOnly="True" ToolTip="Double click to open" MouseDoubleClick="tbSavePath_MouseDoubleClick"/>
        <Button x:Name="bBrowseLoadPath" Content="..." Margin="0,45,32,0" VerticalAlignment="Top" Click="bBrowseLoadPath_Click" HorizontalAlignment="Right" Width="41"/>
        <Button x:Name="bBrowseSavePath" Content="..." Margin="0,70,32,0" VerticalAlignment="Top" Click="bBrowseSavePath_Click" HorizontalAlignment="Right" Width="41"/>

        <Label x:Name="labelSourceId" Content="Enter main station id" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,-1.154"/>
        <Label x:Name="labelH" Content="Enter H" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.571,-1.154"/>
        <Label x:Name="LabelHMin" Content="Enter Hmin" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelAccidentPercent" Content="Enter accident percent of Q" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbMainStationId" Text="{Binding Source={x:Static p:Settings.Default}, Path=tbMainStationId, Mode=TwoWay}" Height="23" Margin="192,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="141"/>
        <TextBox x:Name="tbH" Text="{Binding Source={x:Static p:Settings.Default}, Path=tbH, Mode=TwoWay}" Height="23" Margin="192,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" AttachedBehaviors:TextBoxBehavior.IsUnsignedDouble="True" HorizontalAlignment="Left" Width="141"/>
        <TextBox x:Name="tbHMin" Text="{Binding Source={x:Static p:Settings.Default}, Path=tbHMin, Mode=TwoWay}" Height="23" Margin="192,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.525,-0.043" AttachedBehaviors:TextBoxBehavior.IsUnsignedDouble="True" HorizontalAlignment="Left" Width="141"/>
        <TextBox x:Name="tbAccidentPercent" Text="{Binding Source={x:Static p:Settings.Default}, Path=tbAccidentPercent, Mode=TwoWay}" Height="23" Margin="192,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" AttachedBehaviors:TextBoxBehavior.IsUnsignedDouble="True" HorizontalAlignment="Left" Width="141"/>
        <Label x:Name="tbHMeasurement" Content="meters" HorizontalAlignment="Left" Margin="341,140,0,0" VerticalAlignment="Top"/>
        <Label x:Name="tbHMinMeasurement" Content="meters" HorizontalAlignment="Left" Margin="341,168,0,0" VerticalAlignment="Top"/>
        <Label x:Name="tbAccidentPercentMeasurement" Content="%" HorizontalAlignment="Left" Margin="346,196,0,0" VerticalAlignment="Top"/>
        
        <CheckBox x:Name="cbOnlyMainInfo" IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=cbOnlyMainInfo, Mode=TwoWay}" Content="Only main info" HorizontalAlignment="Left" Margin="14,241,0,0" VerticalAlignment="Top" Width="153"/>
        <Button x:Name="bCalculate" Content="Calculate" Margin="192,241,0,0" VerticalAlignment="Top" Click="bCalculate_Click" Width="141" HorizontalAlignment="Left" IsEnabled="False" ToolTipService.ShowOnDisabled="True" ToolTip="Enter file path"/>

    </Grid>
</Window>
